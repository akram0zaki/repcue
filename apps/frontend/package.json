{
  "name": "@repcue/frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm generate-splash && node scripts/verify-media.mjs pre && tsc -b && vite build && node scripts/verify-media.mjs post && pnpm copy-splash",
    "copy-splash": "node scripts/copy-splash.mjs",
    "build:prod": "pnpm generate-splash && node scripts/verify-media.mjs pre && vite build && node scripts/verify-media.mjs post",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run",
    "test:stable": "vitest -c vitest.stable.config.ts run",
    "test:ci": "vitest -c vitest.stable.config.ts run --reporter=dot --silent",
    "cypress:open": "cypress open --config-file ../../tests/e2e/cypress.config.mjs",
    "cypress:run": "cypress run --config-file ../../tests/e2e/cypress.config.mjs",
    "test:e2e": "start-server-and-test dev http://localhost:5173 \"cypress run --config-file ../../tests/e2e/cypress.config.mjs\"",
    "test:a11y": "start-server-and-test dev http://localhost:5173 \"cypress run --config-file ../../tests/e2e/cypress.config.mjs --spec cypress/e2e/axe.cy.ts\"",
    "test:all": "pnpm test:unit && pnpm test:e2e",
    "pw:install": "npx playwright install --with-deps",
    "pw:test": "playwright test -c playwright.config.ts",
    "pw:ui": "playwright test -c playwright.config.ts --ui",
    "i18n:scan": "node scripts/i18n-scan.mjs",
    "i18n:report": "node scripts/i18n-scan.mjs || exit 0",
    "generate-favicons": "node scripts/generate-favicons.js",
    "generate-favicons:full": "node scripts/generate-favicons.js --full",
    "generate-splash": "node scripts/generate-splash.mjs"
  },
  "dependencies": {
    "@simplewebauthn/browser": "^13.1.2",
    "@simplewebauthn/types": "^12.0.0",
    "@supabase/supabase-js": "^2.56.0",
    "@tailwindcss/forms": "^0.5.10",
    "autoprefixer": "^10.4.21",
    "dexie": "^4.0.11",
    "i18next": "^25.3.6",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.6.1",
    "react-router-dom": "^7.6.3",
    "tailwindcss": "^3.4.17",
    "workbox-window": "^7.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.5.2",
    "axe-core": "^4.10.3",
    "cypress": "^14.5.2",
    "cypress-axe": "^1.6.0",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "jsdom": "^26.1.0",
    "sharp": "^0.34.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^7.0.0",
    "vite-plugin-pwa": "^1.0.1",
    "vitest": "^3.2.4"
  }
}