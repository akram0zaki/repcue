{
  "name": "repcue",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run generate-splash && node scripts/verify-media.mjs pre && tsc -b && vite build && node scripts/verify-media.mjs post && npm run copy-splash",
    "copy-splash": "powershell -Command \"Copy-Item -Recurse -Force public/splash dist/\"",
    "build:prod": "npm run generate-splash && node scripts/verify-media.mjs pre && vite build && node scripts/verify-media.mjs post",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "node server.js",
    "build:serve": "npm run build:prod && npm start",
    "pm2:start": "npm run build:prod && pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop repcue",
    "pm2:restart": "pm2 restart repcue",
    "pm2:logs": "pm2 logs repcue",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:unit": "vitest run",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "start-server-and-test dev http://localhost:5173 cypress:run",
    "test:a11y": "start-server-and-test dev http://localhost:5173 'cypress run --spec cypress/e2e/axe.cy.ts'",
    "test:all": "npm run test:unit && npm run test:e2e",
    "generate-favicons": "node scripts/generate-favicons.js",
    "generate-favicons:full": "node scripts/generate-favicons.js --full",
    "generate-splash": "node scripts/generate-splash.mjs"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "autoprefixer": "^10.4.21",
    "compression": "^1.7.4",
    "dexie": "^4.0.11",
    "express": "^4.18.2",
    "i18next": "^25.3.6",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.6.1",
    "react-router-dom": "^7.6.3",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@cypress/react": "^9.0.1",
    "@cypress/webpack-dev-server": "^4.1.0",
    "@eslint/js": "^9.29.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.5.2",
    "axe-core": "^4.10.3",
    "cypress": "^14.5.2",
    "cypress-axe": "^1.6.0",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "jsdom": "^26.1.0",
    "sharp": "^0.34.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^7.0.0",
    "vite-plugin-pwa": "^1.0.1",
    "vitest": "^3.2.4",
    "workbox-window": "^7.3.0"
  }
}
