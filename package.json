{
  "name": "repcue",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tests/e2e"
  ],
  "scripts": {
    "dev": "npm run dev --workspace @repcue/frontend",
    "dev:be": "npm run dev --workspace @repcue/backend",
    "build": "npm run build --workspace @repcue/frontend",
    "preview": "npm run preview --workspace @repcue/frontend",
    "start": "npm run start --workspace @repcue/backend",
    "build:serve": "npm run build --workspace @repcue/frontend && npm run start --workspace @repcue/backend",
    "pm2:start": "npm run pm2:start --workspace @repcue/backend",
    "pm2:stop": "npm run pm2:stop --workspace @repcue/backend",
    "pm2:restart": "npm run pm2:restart --workspace @repcue/backend",
    "pm2:logs": "npm run pm2:logs --workspace @repcue/backend",
    "lint": "npm run lint --workspace @repcue/frontend",
    "test": "npm run test --workspace @repcue/frontend",
    "test:ui": "npm run test:ui --workspace @repcue/frontend",
    "test:coverage": "npm run test:coverage --workspace @repcue/frontend",
    "test:unit": "npm run test:unit --workspace @repcue/frontend",
    "test:stable": "npm run test:stable --workspace @repcue/frontend",
    "cypress:open": "npm run cypress:open --workspace @repcue/frontend",
    "cypress:run": "npm run cypress:run --workspace @repcue/frontend",
    "test:e2e": "npm run test:e2e --workspace @repcue/frontend",
    "test:a11y": "npm run test:a11y --workspace @repcue/frontend",
    "test:all": "npm run test:all --workspace @repcue/frontend",
    "i18n:scan": "npm run i18n:scan --workspace @repcue/frontend",
    "i18n:report": "npm run i18n:report --workspace @repcue/frontend",
    "generate-favicons": "npm run generate-favicons --workspace @repcue/frontend",
    "generate-favicons:full": "npm run generate-favicons:full --workspace @repcue/frontend",
    "generate-splash": "npm run generate-splash --workspace @repcue/frontend",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10"
  },
  "lint-staged": {
    "apps/frontend/**/*.{ts,tsx,js,jsx,css,scss}": [
      "eslint --fix",
      "git add"
    ],
    "apps/frontend/src/**/*.{ts,tsx}": [
      "node apps/frontend/scripts/i18n-scan.mjs"
    ]
  }
}
