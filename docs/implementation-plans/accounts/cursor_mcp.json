
{
  "clients": {
    "default": {
      "transport": { "type": "stdio" },
      "servers": {
        "supabase-local": {
          "command": "npx",
          "args": ["-y", "@supabase-community/supabase-mcp@latest"],
          "env": {
            "SUPABASE_URL": "http://<your-pi-ip>:54321",
            "SUPABASE_SERVICE_ROLE_KEY": "<service-role-key-from-supabase-start>"
          }
        },
        "postgres": {
          "command": "npx",
          "args": ["-y", "@modelcontextprotocol/server-postgres@latest"],
          "env": {
            "PGHOST": "<your-pi-ip>",
            "PGPORT": "54322",
            "PGUSER": "postgres",
            "PGPASSWORD": "postgres",
            "PGDATABASE": "postgres",
            "PGSSLMODE": "disable"
          }
        }
      }
    }
  }
}
